@model IEnumerable<FSP_Return_Task3.Models.Passport>
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .btn {
            border: 2px solid black;
            background-color: white;
            color: black;
            padding: 14px 28px;
            font-size: 16px;
            cursor: pointer;
        }
        /* Green */
        .btn {
            border-color: #04AA6D;
            color: green;
        }

            .btn:hover {
                background-color: #04AA6D;
                color: white;
            }

        /*border-collapse is a CSS property that determines how the borders of adjacent table cells 
        should be handled. By setting it to collapse, the borders of adjacent cells will be merged
        into a single border, resulting in a more compact and polished look for the table.*/
       .table {
            border-collapse: collapse;
        }

        .table {
            border: 2px solid black;
            font-weight:normal;
            
        }
        .passportbg{
            background-image: url(https://images.unsplash.com/photo-1524592714635-d77511a4834d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80);
            background-size:cover;
            
        }
        
    </style>
</head>
<body class="passportbg"> 
<p>
    <a class="btn" asp-action="Create"><b>CREATE NEW</b></a>
</p>
<div class="container m-3">
    <h2> Add Passport details of new Passenger:</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.PassportNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValidDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passenger)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="color:black;font-size:larger">
                @Html.DisplayFor(modelItem => item.PassportNumber)
            </td>
             <td style="color:black;font-size:larger">
                @Html.DisplayFor(modelItem => item.ValidDate)
            </td>
             <td style="color:black;font-size:larger">
                @Html.DisplayFor(modelItem => item.Passenger.Id)
            </td>
            <td>
                <a style="color:black;font-size:larger" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a style="color:black;font-size:larger" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a style="color:black;font-size:larger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</body>
</html>
